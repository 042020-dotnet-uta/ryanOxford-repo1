@model Project1.Data.Order

@{
    ViewData["Title"] = "CompleteOrder";
}

<h1>Delete</h1>

<h3>Are you sure you want to complete this?</h3>
<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Customer: @Html.DisplayNameFor(model => model.Customer.FName) @Html.DisplayNameFor(model => model.Customer.FName)
        </dt>
        <dd class="col-sm-10">
            Location: @Html.DisplayFor(model => model.Location.Name)
        </dd>
    </dl>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Product
                </th>
                <th>
                    Description
                </th>
                <th>
                    Quantity
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <form asp-action="CompleteOrder">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Complete Order" class="btn btn-primary" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>