@model Project1.WebApp.Models.InventoryCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Inventory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Location:
                <select asp-for="InventoryLocation" asp-items="Model.Locations">
                    <option value="" selected disabled hidden>-Select a location-</option>
                </select>
                <span asp-validation-for="InventoryLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                Product:
                <select asp-for="InventoryProduct" asp-items="Model.Products">
                    <option value="" selected disabled hidden>-Select a product-</option>
                </select>
                <span asp-validation-for="InventoryProduct" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <span class="text-danger">@Model.ErrorMessage</span>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
